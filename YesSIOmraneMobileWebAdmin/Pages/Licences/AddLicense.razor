@inherits AddLicensesBase
@page "/addlicense"
@layout AccueilLayout
@inject HttpClient Http
@inject NavigationManager NAV



<AuthorizeView Roles="AdminYes" >
    <Authorized Context="auth">
       
        <h3>Ajouter une licence</h3>
      
        <div class="row">
            <div class="col-md-4">
                <EditForm Model="License" OnValidSubmit="@CreateEmployee">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label for="Name" class="control-label">Description</label>
                        <input for="Name" class="form-control" @bind-value="@License.Description" />
                    </div>
                    <div class="form-group">
                        <label asp-for="info" class="control-label">Adresse email de client licencié propriétaire</label>
                        <input asp-for="info" class="form-control" @bind-value="@License.AdmUserEmail" />
                        <label asp-for="info" class="control-label">Nombre d'utilisateur</label>
                        <input asp-for="info" class="form-control" @bind-value="@License.UserNumber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="control-label">Adresse de serveur</label>
                        <input asp-for="Department" class="form-control" @bind-value="@License.ServerUrl" />
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label">Date d'expiration</label>
                        <input type="date" asp-for="City" class="form-control" @bind-value="@License.ExpireDate" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark" type="submit" >Sauvgarder</button>
                    </div>




                    <ValidationSummary />
                </EditForm>
            </div>
        </div>
    </Authorized>

    <NotAuthorized >
       <h1>Unauthorized</h1>
    </NotAuthorized>

   </AuthorizeView>

